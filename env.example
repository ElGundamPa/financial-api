# CORS Configuration (deshabilitado por defecto)
# Para habilitar, establece ENABLE_CORS=true y define CORS_ORIGINS
ENABLE_CORS=false
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_RPM=60

# HTTP Timeouts
HTTP_TIMEOUT_SECONDS=12

# Cache Configuration
CACHE_TTL_SECONDS=90

# Request Limits
MAX_BODY_KB=128

# Logging
LOG_LEVEL=INFO

# Authentication (elige uno)
# AUTH_MODE puede ser: none | apikey | basic | jwt
AUTH_MODE=apikey

# Para AUTH_MODE=apikey (admite múltiples, separadas por coma)
API_KEYS=mF9zX2q7Lr4pK8yD1sBvWj

# Para AUTH_MODE=basic
BASIC_USER=
BASIC_PASSWORD=

# Excluir rutas de autenticación (separadas por coma)
AUTH_EXCLUDE_PATHS=/health,/docs,/openapi.json

# Para AUTH_MODE=jwt (RS256)
# Pega aquí la clave pública en formato PEM (incluyendo los headers BEGIN/END)
# En Vercel, usa Secrets/Env vars y mantén esto vacío en commits públicos
JWT_PUBLIC_KEY="""
-----BEGIN PUBLIC KEY-----
REEMPLAZA_CON_TU_CLAVE_PUBLICA
-----END PUBLIC KEY-----
"""

# Opcionales
JWT_ISSUER=
JWT_AUDIENCE=
JWT_REQUIRED_SCOPE=
