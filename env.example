# CORS Configuration
CORS_ORIGINS=https://tu-frontend.com,http://localhost:3000

# Rate Limiting
RATE_LIMIT_RPM=60

# HTTP Timeouts
HTTP_TIMEOUT_SECONDS=12

# Cache Configuration
CACHE_TTL_SECONDS=90

# Request Limits
MAX_BODY_KB=128

# Logging
LOG_LEVEL=INFO

# Authentication (elige uno)
# AUTH_MODE puede ser: none | apikey | basic
AUTH_MODE=apikey

# Para AUTH_MODE=apikey (admite múltiples, separadas por coma)
API_KEYS=pon_un_secreto_largo_aqui

# Para AUTH_MODE=basic
BASIC_USER=
BASIC_PASSWORD=

# Excluir rutas de autenticación (separadas por coma)
AUTH_EXCLUDE_PATHS=/health,/docs,/openapi.json
